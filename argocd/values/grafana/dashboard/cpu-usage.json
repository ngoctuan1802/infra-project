{
  "uid": "cpu-usage",
  "title": "CPU Usage Dashboard",
  "schemaVersion": 36,
  "version": 1,
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "targets": [
        {
          "expr": "instance:node_cpu:rate:sum",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {"mode": "absolute", "steps": [{"color": "green"}, {"value": 80, "color": "red"}]}
        }
      },
      "options": {
        "legend": {"displayMode": "list"},
        "tooltip": {"mode": "single"}
      }
    }
  ]
}
